{
	"name": "node-ts-boilerplate",
	"version": "1.0.0",
	"author": "PoProstuWitold",
	"description": "Basic template for robust development of TypeScript apps",
	"main": "build/src/main.js",
	"homepage": "https://github.com/PoProstuWitold/node-ts-template",
	"engines": {
		"node": ">=18.x"
	},
	"scripts": {
		"start": "node build/src/main.js",
		"start:watch": "ts-node --restart src/main.ts",
		"clean": "rimraf coverage build tmp",
		"lint": "eslint . --ext .ts",
		"prettier": "prettier --config .prettierrc --write .",
		"prebuild": "npm run lint",
		"build": "tsc -p tsconfig.json",
		"build:watch": "tsc -w -p tsconfig.json",
		"build:release": "npm run clean && tsc -p tsconfig.release.json",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"keywords": [
		"TypeScript",
		"boilerplate",
		"node",
		"ts"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.3",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-jest": "^27.2.1",
		"jest": "^29.5.0",
		"prettier": "^2.8.4",
		"rimraf": "^4.4.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"tsutils": "^3.21.0",
		"typescript": "^5.0.2"
	}
}
